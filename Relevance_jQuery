<script>
    // jQuery to update info text based on selected pill
    $(document).ready(function () {
        var infoMap = {
            "#sdp": "SDP builds real-world software development skills, teamwork, and industry readiness.",
            "#edi": "EDI drives innovation, prototyping, and solving real-life engineering problems.",
            "#dt": "Design Thinking trains you to design user-centric, creative and practical solutions.",
            "#course-project": "Course projects strengthen your understanding of subject concepts through practice."
        };

        $('a[data-toggle="pill"]').on('shown.bs.tab', function (e) {
            var target = $(e.target).attr("href"); // activated tab
            $("#infoText").text(infoMap[target]);
        });
    });
</script>

